# =============================================================================
# CONFIGURAÇÕES DO SNOWFLAKE
# =============================================================================

# Configurações obrigatórias
SNOWFLAKE_ACCOUNT=your_account.snowflakecomputing.com
SNOWFLAKE_USER=your_username
SNOWFLAKE_ROLE=your_role
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema

# =============================================================================
# AUTENTICAÇÃO - ESCOLHA UMA DAS OPÇÕES ABAIXO
# =============================================================================

# Opção 1: Autenticação por senha (mais simples)
SNOWFLAKE_PASSWORD=your_password

# Opção 2: Autenticação por chave privada (mais segura para produção)
# Opção 2a: Caminho para o arquivo da chave privada
SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/your/private_key.pem
# Opção 2b: Conteúdo da chave privada em base64 (alternativa ao caminho)
# SNOWFLAKE_PRIVATE_KEY=your_base64_encoded_private_key
SNOWFLAKE_PRIVATE_KEY_PASSWORD=your_private_key_password

# =============================================================================
# CONFIGURAÇÕES OPCIONAIS
# =============================================================================

# Tag para queries (útil para monitoramento)
SNOWFLAKE_QUERY_TAG=dbt_project_name

# Configurações de conexão (valores padrão recomendados)
SNOWFLAKE_CLIENT_SESSION_KEEP_ALIVE=False
SNOWFLAKE_THREADS=5

# =============================================================================
# CONFIGURAÇÕES DO DBT
# =============================================================================

# Target padrão (dev, prod, staging, etc.)
DBT_TARGET=dev

# Diretório onde está o profiles.yml (caminho absoluto ou relativo ao projeto)
DBT_PROFILES_DIR=./.dbt

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================

# Debug mode (True/False)
DEBUG=False

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
